@model WebSite.Models.Topic

@{
    ViewBag.Title = "Topic";
}

<h2>Topic</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Topic</legend>

        @Html.HiddenFor(model => model.TopicID)

        <div class="editor-label">
            @Html.LabelFor(model => model.TopicToken)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TopicToken)
            @Html.ValidationMessageFor(model => model.TopicToken)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TopicName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TopicName)
            @Html.ValidationMessageFor(model => model.TopicName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Body)
            @Html.ValidationMessageFor(model => model.Body)
        </div>

        <p>
            <input type="submit" value="Save" />
            @Html.ActionLink("Back to List", "Topics")
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $().ready(function () {
            $('textarea.tinymce').tinymce({
                script_url: '../Scripts/tinymce/jscripts/tiny_mce/tiny_mce.js',
                theme: "advanced"

            });
        });
    </script>
}
