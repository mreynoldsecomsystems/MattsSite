@model WebSite.Models.Topic

@{
    ViewBag.Title = "NewTopic";
}

<h2>NewTopic</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Topic</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TopicToken)
            @Html.EditorFor(model => model.TopicToken)
            @Html.ValidationMessageFor(model => model.TopicToken)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.TopicName)
            @Html.EditorFor(model => model.TopicName)
            @Html.ValidationMessageFor(model => model.TopicName)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Body)
            @Html.TextAreaFor(model => model.Body, new { @class = "tinymce" })
            @Html.ValidationMessageFor(model => model.Body)
        </div>
        

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Topics")
</div>

@section Scripts {
@*    @Scripts.Render("~/bundles/jqueryval")*@
    <script src="~/Scripts/tinymce/tiny_mce.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.js"></script>
    <script type="text/javascript">
        $().ready(function () {
            $('textarea.tinymce').tinymce({
                script_url: '../Scripts/tinymce/tiny_mce.js',
                theme: "advanced",
                width: "300",
                theme_advanced_resizing: true,
                theme_advanced_resizing_min_height: 300,
                theme_advanced_resizing_min_width: 300

            });
        });
    </script>

}
